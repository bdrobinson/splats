{
  "name": "splats",
  "version": "1.0.0",
  "description": "Splat the leader!",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && npm run server",
    "build": "npm run clean && npm run images && npm run html && npm run css && npm run js",
    "html": "cp assets/html/*.html static/",
    "css": "node-sass assets/scss/*.scss -o static/css/",
    "js": "browserify assets/js/bootstrap.js -t [ babelify --presets [ react es2015 stage-3 ] --plugins [ transform-runtime ] ] --debug -o static/js/bootstrap.js",
    "images": "cp data/images/* static/images && cp assets/images/* static/images",
    "clean": "rm -f static/*.html static/css/* static/js/*",
    "server": "node app/app.js"
  },
  "author": "Ben Robinson",
  "license": "MIT",
  "dependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-3": "^6.11.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "express": "^4.13.4",
    "immutable": "^3.8.1",
    "node-sass": "^3.8.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "sass-lint": "^1.8.2"
  }
}
