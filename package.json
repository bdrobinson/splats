{
    "name": "splats",
    "version": "1.0.0",
    "description": "Splat the leader!",
    "scripts": {
        "start": "firebase serve --only functions,hosting",
        "build:live": "SPLATS_ENV=live webpack -p",
        "build:test": "webpack -p",
        "clean": "rimraf static/",
        "watch": "webpack --watch",
        "assets": "python scripts/leaders.py && python scripts/images.py",
        "deploy:test": "yarn run clean && yarn run build:test && firebase deploy -P test",
        "deploy:live": "yarn run clean && yarn run build:live && firebase deploy -P live"
    },
    "author": "Ben Robinson",
    "license": "MIT",
    "dependencies": {
        "babel-eslint": "^7.2.3",
        "babel-polyfill": "^6.23.0",
        "babel-preset-react": "^6.24.1",
        "eslint": "^4.4.0",
        "firebase": "^4.3.0",
        "immutable": "^3.8.1",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-redux": "^5.0.5",
        "react-router-dom": "^4.1.2",
        "redux": "^3.7.2",
        "redux-thunk": "^2.2.0"
    },
    "devDependencies": {
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-plugin-styled-components": "^1.1.7",
        "babel-preset-env": "^1.6.0",
        "copy-webpack-plugin": "^4.0.1",
        "eslint-config-standard": "^10.2.1",
        "eslint-config-standard-react": "^5.0.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-node": "^5.1.1",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.1.0",
        "eslint-plugin-standard": "^3.0.1",
        "file-loader": "^0.11.2",
        "firebase-admin": "^6.0.0",
        "firebase-functions": "^2.0.5",
        "firebase-tools": "^4.2.0",
        "html-webpack-plugin": "^2.30.1",
        "rimraf": "^2.6.1",
        "styled-components": "^2.1.2",
        "webpack": "^3.4.1",
        "whatwg-fetch": "^2.0.3"
    }
}
